networks:
  cartmanagement-dev:
    driver: bridge
services:
  cartmanagement:
    build:
      context: /Users/blacklivesmatter/Projects/dotnetcore/CartManagement
      dockerfile: Dockerfile
    depends_on:
    - postgres_image
    environment:
      DB_CONNECTION_STRING: host=postgres_image;port=5432;database=cartdb;username=cartuser;password=cartuser
    image: cartmanagement:latest
    networks:
      cartmanagement-dev: null
    ports:
    - published: 8080
      target: 5000
  postgres_image:
    environment:
      POSTGRES_DB: cartdb
      POSTGRES_PASSWORD: cartuser
      POSTGRES_USER: cartuser
    image: postgres:latest
    networks:
      cartmanagement-dev: null
    ports:
    - target: 5432
    restart: always
    volumes:
    - db_volume:/var/lib/postgresql/data:rw
    - /Users/blacklivesmatter/Projects/dotnetcore/CartManagement/init.sql:/docker-entrypoint-initdb.d/init.sql:rw
version: '3.4'
volumes:
  db_volume: {}